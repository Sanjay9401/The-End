@model IEnumerable<LeoAirlines.Models.airportinfo>
@{
    ViewBag.Title = "AirportList";
}
<body class="servbg">
    <h2>AirportList</h2>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">



    <table class="table table-striped">
        <thead>
            <tr>
                <th>S.No</th>
                <th>
                    @Html.DisplayNameFor(model => model.IATACODE)
                </th>



                <th>
                    @Html.DisplayNameFor(model => model.AIRPORTNAME)
                </th>



                <th>
                    @Html.DisplayNameFor(model => model.cityinfo.CITY)
                </th>



            </tr>
        </thead>
        <tbody id="mytable">



            @foreach (var item in Model)
            {
                <tr>




                    <td>
                        @Html.DisplayFor(modelItem => item.IATACODE)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AIRPORTNAME)
                    </td>



                    <td>
                        @Html.DisplayFor(modelItem => item.cityinfo.CITY)
                    </td>



                </tr>
            }
        </tbody>
    </table>
    <script>
        var table = document.getElementById("mytable");
        var rows = table.getElementsByTagName("tr");

        for (var i = 0; i < rows.length; i++) {
            var row = rows[i];
            var idcell = document.createElement("td");
            idcell.textContent = i + 1;
            row.insertBefore(idcell, row.firstChild);


        }</script>
</body>